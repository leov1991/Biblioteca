@model Library.Models.Patrons.PatronIndexModel

@{
    ViewBag.Title = "Lista de Miembros";
}

<h3>@ViewBag.Title</h3>
<div id="patronIndex">
    <table id="patronIndexTable" class="mdl-data-table mdl js data-table mdl-data--selectable mdl-shadow--2p customTable">
        <thead>
            <tr>
                <th>Perfil</th>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Nro. Tarjeta</th>
                <th>Vencimientos</th>
                <th>Sucursal</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var patron in Model.Patrons)
            {
                <tr>
                    <td><a asp-controller="Patron" asp-action="Detail" asp-route-id="@patron.Id">(Perfil)</a></td>
                    <td>@patron.LastName</td>
                    <td>@patron.FirstName</td>
                    <td>@patron.LibraryCardId</td>
                    <td>@patron.OverdueFees</td>
                    <td>@patron.HomeLibraryBranch</td>
                </tr>
            }
        </tbody>
    </table>
</div>